<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
    </Console>
    <File name="HTML" fileName="logs/html/logs.html">
    	<HTMLLayout charset="UTF-8" locationInfo="true" title="Computer Database logs"/>
    </File>
  </Appenders>
  <Loggers>
  	<Logger name="com.formation.computerdatabase.console" level="info" additivity="false">
    	<AppenderRef ref="STDOUT"/>
    </Logger>
    <!--<Logger name="com.excilys.formation.computerdatabase.html" level="error" additivity="false">
    	<AppenderRef ref="HTML"/>
    	
    </Logger>-->
    <Root level="trace">
      <AppenderRef ref="STDOUT"/>
    </Root>
  </Loggers>
</Configuration>